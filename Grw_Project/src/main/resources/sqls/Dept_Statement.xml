<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rgb.grw.dao.DeptDaoImpl">

<select id="DeptList" resultType="DeptDto">
	SELECT D.SEQ, D.EMP_NO, D.DEP_NO,
     	   D.DEP_NAME, D.DEP_STATE, E.EMP_NAME
    FROM
        DEP D
    JOIN
        EMP E
    ON
        D.EMP_NO = E.EMP_NO
</select>

<insert id="insertDept" parameterType="map">
    INSERT INTO DEP (DEP_NO, DEP_NAME)
    VALUES (#{depNo}, #{depName});
</insert>




</mapper>
